{% comment %}
    Minimal Breadcrumbs Component
    Version: 3.0.0
    Follows Shopify best practices with no external dependencies
{% endcomment %}

<nav aria-label="Breadcrumbs" style="font-size: 14px; margin: 1em 0;">
  <ol style="display: flex; list-style: none; padding: 0; margin: 0; flex-wrap: wrap;">
    <li style="display: inline-flex; align-items: center;">
      <a href="/" style="color: #666; text-decoration: none;">Home</a>
    </li>

    {% if template contains 'product' %}
      <li style="display: inline-flex; align-items: center; margin: 0 0.3em;">
        <span style="color: #999;" aria-hidden="true">/</span>
      </li>
      {% if collection %}
        <li style="display: inline-flex; align-items: center;">
          <a href="{{ collection.url }}" style="color: #666; text-decoration: none;">{{ collection.title }}</a>
        </li>
        <li style="display: inline-flex; align-items: center; margin: 0 0.3em;">
          <span style="color: #999;" aria-hidden="true">/</span>
        </li>
      {% endif %}
      <li style="display: inline-flex; align-items: center;">
        <span style="color: #333; font-weight: 500;" aria-current="page">{{ product.title }}</span>
      </li>

    {% elsif template contains 'collection' %}
      <li style="display: inline-flex; align-items: center; margin: 0 0.3em;">
        <span style="color: #999;" aria-hidden="true">/</span>
      </li>
      <li style="display: inline-flex; align-items: center;">
        <span style="color: #333; font-weight: 500;" aria-current="page">{{ collection.title }}</span>
      </li>

    {% elsif template contains 'page' %}
      <li style="display: inline-flex; align-items: center; margin: 0 0.3em;">
        <span style="color: #999;" aria-hidden="true">/</span>
      </li>
      <li style="display: inline-flex; align-items: center;">
        <span style="color: #333; font-weight: 500;" aria-current="page">{{ page.title }}</span>
      </li>

    {% elsif template contains 'cart' %}
      <li style="display: inline-flex; align-items: center; margin: 0 0.3em;">
        <span style="color: #999;" aria-hidden="true">/</span>
      </li>
      <li style="display: inline-flex; align-items: center;">
        <span style="color: #333; font-weight: 500;" aria-current="page">Shopping Cart</span>
      </li>

    {% elsif template != 'index' %}
      <li style="display: inline-flex; align-items: center; margin: 0 0.3em;">
        <span style="color: #999;" aria-hidden="true">/</span>
      </li>
      <li style="display: inline-flex; align-items: center;">
        <span style="color: #333; font-weight: 500;" aria-current="page">{{ page_title }}</span>
      </li>
    {% endif %}
  </ol>
</nav> 