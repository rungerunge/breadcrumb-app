{% comment %}
    Smart Breadcrumbs - Ultra Simple Version
    Version: 2.1.8
    No external dependencies, no storage, no JavaScript
{% endcomment %}

<div style="margin: 1em 0; padding: 0.5em 1em; background: #f8f8f8; border-radius: 4px; font-size: 14px;">
  <span style="color: #666;">
    <a href="/" style="color: #666; text-decoration: none;">Home</a>
  </span>

  {% if template contains 'product' %}
    <span style="color: #999; margin: 0 0.5em;">/</span>
    {% if collection %}
      <span>
        <a href="{{ collection.url }}" style="color: #666; text-decoration: none;">{{ collection.title }}</a>
      </span>
    {% endif %}
    <span style="color: #999; margin: 0 0.5em;">/</span>
    <span style="color: #333; font-weight: 500;">{{ product.title }}</span>

  {% elsif template contains 'collection' %}
    <span style="color: #999; margin: 0 0.5em;">/</span>
    <span style="color: #333; font-weight: 500;">{{ collection.title }}</span>

  {% elsif template contains 'page' %}
    <span style="color: #999; margin: 0 0.5em;">/</span>
    <span style="color: #333; font-weight: 500;">{{ page.title }}</span>

  {% elsif template contains 'cart' %}
    <span style="color: #999; margin: 0 0.5em;">/</span>
    <span style="color: #333; font-weight: 500;">Shopping Cart</span>

  {% else %}
    <span style="color: #999; margin: 0 0.5em;">/</span>
    <span style="color: #333; font-weight: 500;">{{ page_title }}</span>
  {% endif %}
</div> 