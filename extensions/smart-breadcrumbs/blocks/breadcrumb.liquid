{% comment %}
  Smart Breadcrumbs App Block v2.0
  A pure Liquid implementation with no JavaScript dependencies
{% endcomment %}

{% schema %}
{
  "name": "Smart Breadcrumbs",
  "target": "section",
  "stylesheet": "breadcrumb-styles.css",
  "javascript": "",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#555555"
    }
  ]
}
{% endschema %}

<style>
  .smart-breadcrumb {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin: 15px 0;
    padding: 10px 15px;
    background-color: {{ block.settings.background_color | default: '#f5f5f5' }};
    border-radius: 4px;
    font-size: 14px;
    line-height: 1.5;
  }

  .smart-breadcrumb a {
    color: {{ block.settings.link_color | default: '#555555' }};
    text-decoration: none;
    transition: color 0.2s;
  }

  .smart-breadcrumb a:hover {
    color: {{ block.settings.text_color | default: '#333333' }};
    text-decoration: underline;
  }

  .smart-breadcrumb__separator {
    margin: 0 10px;
    color: #999;
  }

  .smart-breadcrumb__current {
    font-weight: 600;
    color: {{ block.settings.text_color | default: '#333333' }};
  }

  @media (max-width: 767px) {
    .smart-breadcrumb {
      padding: 8px 12px;
      font-size: 12px;
    }
    
    .smart-breadcrumb__separator {
      margin: 0 8px;
    }
  }
</style>

<div class="smart-breadcrumb">
  <!-- Home link (always present) -->
  <a href="/">Home</a>
  <span class="smart-breadcrumb__separator">/</span>
  
  {% if template contains 'product' %}
    {% comment %}
      For products, we need to ensure a collection link is present
      First check current collection, then product collections, then use a default
    {% endcomment %}
    
    {% assign show_collection = false %}
    {% assign collection_url = "" %}
    {% assign collection_title = "" %}
    
    {% comment %}Check for current collection context{% endcomment %}
    {% if collection and collection.handle != 'all' %}
      {% assign show_collection = true %}
      {% assign collection_url = collection.url %}
      {% assign collection_title = collection.title %}
    {% comment %}Otherwise, check if product has collections{% endcomment %}
    {% elsif product.collections.size > 0 %}
      {% assign show_collection = true %}
      {% for collection in product.collections %}
        {% if collection.handle != 'all' %}
          {% assign collection_url = collection.url %}
          {% assign collection_title = collection.title %}
          {% break %}
        {% endif %}
      {% endfor %}
    {% endif %}
    
    {% comment %}If collection was found, show it{% endcomment %}
    {% if show_collection %}
      <a href="{{ collection_url }}">{{ collection_title }}</a>
      <span class="smart-breadcrumb__separator">/</span>
    {% endif %}
    
    <!-- Product title (current page) -->
    <span class="smart-breadcrumb__current">{{ product.title }}</span>
    
  {% elsif template contains 'collection' %}
    <!-- Collection title (current page) -->
    <span class="smart-breadcrumb__current">{{ collection.title }}</span>
    
  {% elsif template contains 'cart' %}
    <!-- Cart page -->
    <span class="smart-breadcrumb__current">Cart</span>
    
  {% elsif template contains 'page' %}
    <!-- Regular page -->
    <span class="smart-breadcrumb__current">{{ page.title }}</span>
    
  {% elsif template contains 'search' %}
    <!-- Search results page -->
    <span class="smart-breadcrumb__current">Search Results</span>
    
  {% else %}
    <!-- Default for other templates -->
    <span class="smart-breadcrumb__current">{{ page_title | default: template }}</span>
  {% endif %}
</div> 