{% schema %}
{
  "name": "Smart Breadcrumbs",
  "target": "section",
  "stylesheet": "breadcrumbs.css",
  "javascript": "",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 10,
      "max": 24,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin Top",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "separator",
      "label": "Breadcrumb Separator",
      "default": "â€º"
    }
  ]
}
{% endschema %}

{% render 'smart-breadcrumbs' %}

<style>
  .breadcrumb-container {
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
    font-size: {{ block.settings.font_size }}px;
  }

  .breadcrumb-item:not(:last-child):after {
    content: '{{ block.settings.separator }}';
  }
</style> 