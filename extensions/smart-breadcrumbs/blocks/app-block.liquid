{% comment %}
Smart Breadcrumbs App Block v2.1.0
Improved navigation with better page type handling and accessibility
{% endcomment %}

{{ 'breadcrumb-styles.css' | asset_url | stylesheet_tag }}

<div class="smart-breadcrumb" role="navigation" aria-label="breadcrumbs">
  <ul class="smart-breadcrumb__list">
    <li>
      <a href="{{ shop.url }}" class="smart-breadcrumb__link">
        <span>Home</span>
      </a>
    </li>

    {% if template contains 'product' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      {% if collection %}
        <li>
          <a href="{{ collection.url }}" class="smart-breadcrumb__link">
            <span>{{ collection.title }}</span>
          </a>
        </li>
        <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      {% endif %}
      <li>
        <span class="smart-breadcrumb__current">{{ product.title }}</span>
      </li>

    {% elsif template contains 'collection' and collection.handle %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ collection.title }}</span>
      </li>

    {% elsif template contains 'blog' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ blog.title }}</span>
      </li>

    {% elsif template contains 'article' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <a href="{{ blog.url }}" class="smart-breadcrumb__link">
          <span>{{ blog.title }}</span>
        </a>
      </li>
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ article.title }}</span>
      </li>

    {% elsif template contains 'page' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ page.title }}</span>
      </li>

    {% elsif template contains 'cart' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">Shopping Cart</span>
      </li>

    {% elsif template contains 'search' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">Search Results</span>
      </li>

    {% else %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ page_title }}</span>
      </li>
    {% endif %}
  </ul>
</div>

<style>
  .smart-breadcrumb {
    background-color: {{ block.settings.background_color | default: '#f6f6f6' }};
    padding: 10px 15px;
    margin-bottom: 20px;
  }

  .smart-breadcrumb__list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin: 0;
    padding: 0;
    list-style: none;
    gap: 8px;
  }

  .smart-breadcrumb__link {
    color: {{ block.settings.link_color | default: '#000000' }};
    text-decoration: none;
    font-size: 14px;
    transition: opacity 0.2s;
  }

  .smart-breadcrumb__link:hover {
    opacity: 0.7;
  }

  .smart-breadcrumb__current {
    color: {{ block.settings.text_color | default: '#000000' }};
    font-weight: 500;
    font-size: 14px;
  }

  .breadcrumbs-arrow {
    display: flex;
    align-items: center;
    color: {{ block.settings.text_color | default: '#000000' }};
    opacity: 0.5;
  }

  @media screen and (max-width: 749px) {
    .smart-breadcrumb {
      padding: 8px 10px;
      margin-bottom: 15px;
    }

    .smart-breadcrumb__link,
    .smart-breadcrumb__current {
      font-size: 12px;
    }
  }
</style>

{% schema %}
{
  "name": "Smart Breadcrumbs",
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f6f6f6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#000000"
    }
  ]
}
{% endschema %} 