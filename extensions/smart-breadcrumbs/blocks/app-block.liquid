{% comment %}
Smart Breadcrumbs App Block v2.1.0
Improved navigation with better page type handling and accessibility
{% endcomment %}

{{ 'breadcrumb-styles.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }} .smart-breadcrumb {
    background-color: {{ block.settings.background_color }};
    padding: 10px 0;
  }
  
  #shopify-section-{{ section.id }} .smart-breadcrumb__list {
    margin: 0;
    padding: 0 1rem;
    list-style-type: none;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  #shopify-section-{{ section.id }} .smart-breadcrumb__link {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: 14px;
    line-height: 20px;
    transition: opacity 0.2s ease;
  }
  
  #shopify-section-{{ section.id }} .smart-breadcrumb__link:hover {
    opacity: 0.8;
    text-decoration: underline;
  }
  
  #shopify-section-{{ section.id }} .smart-breadcrumb__current {
    color: {{ block.settings.text_color }};
    font-weight: 500;
  }
  
  #shopify-section-{{ section.id }} .breadcrumbs-arrow {
    color: {{ block.settings.text_color }};
    opacity: 0.5;
    display: flex;
    align-items: center;
  }
  
  @media screen and (max-width: 749px) {
    {% if block.settings.hide_on_mobile %}
      #shopify-section-{{ section.id }} {
        display: none;
      }
    {% else %}
      #shopify-section-{{ section.id }} .smart-breadcrumb {
        padding: 8px 0;
      }
      #shopify-section-{{ section.id }} .smart-breadcrumb__list {
        padding: 0 0.75rem;
        gap: 8px;
      }
      #shopify-section-{{ section.id }} .smart-breadcrumb__link,
      #shopify-section-{{ section.id }} .smart-breadcrumb__current {
        font-size: 12px;
        line-height: 16px;
      }
    {% endif %}
  }
</style>

<nav class="smart-breadcrumb" role="navigation" aria-label="breadcrumbs">
  <ul class="smart-breadcrumb__list">
    <li>
      <a href="{{ shop.url }}" class="smart-breadcrumb__link">
        <span>Home</span>
      </a>
    </li>

    {% if template contains 'page' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ page.title }}</span>
      </li>

    {% elsif template contains 'product' %}
      {% if collection %}
        <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
        <li>
          <a href="{{ collection.url }}" class="smart-breadcrumb__link">
            <span>{{ collection.title }}</span>
          </a>
        </li>
      {% elsif product.collections.size > 0 %}
        {% assign main_collection = product.collections | first %}
        {% if main_collection.handle != 'all' %}
          <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
          <li>
            <a href="{{ main_collection.url }}" class="smart-breadcrumb__link">
              <span>{{ main_collection.title }}</span>
            </a>
          </li>
        {% endif %}
      {% endif %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ product.title }}</span>
      </li>

    {% elsif template contains 'collection' and collection.handle %}
      {% if current_tags %}
        <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
        <li>
          <a href="{{ collection.url }}" class="smart-breadcrumb__link">
            <span>{{ collection.title }}</span>
          </a>
        </li>
        <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
        <li>
          <span class="smart-breadcrumb__current">{{ current_tags | join: ' + ' }}</span>
        </li>
      {% else %}
        <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
        <li>
          <span class="smart-breadcrumb__current">{{ collection.title }}</span>
        </li>
      {% endif %}

    {% elsif template == 'blog' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ blog.title }}</span>
      </li>

    {% elsif template == 'article' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <a href="{{ blog.url }}" class="smart-breadcrumb__link">
          <span>{{ blog.title }}</span>
        </a>
      </li>
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ article.title }}</span>
      </li>

    {% elsif template == 'cart' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">Shopping Cart</span>
      </li>

    {% elsif template == 'search' %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">Search Results</span>
      </li>

    {% else %}
      <span class="breadcrumbs-arrow" aria-hidden="true">{% render 'breadcrumbs-arrow' %}</span>
      <li>
        <span class="smart-breadcrumb__current">{{ page_title }}</span>
      </li>
    {% endif %}
  </ul>

  {% if debug_mode %}
    <div class="smart-breadcrumb__debug">
      <div class="smart-breadcrumb__debug-title">Debug Information:</div>
      Template: {{ template.name }}<br>
      Path: {{ request.path }}<br>
      Page Type: {{ request.page_type }}
    </div>
  {% endif %}
</nav>

{% schema %}
{
  "name": "Smart Breadcrumbs",
  "target": "section",
  "settings": [
    {
      "type": "header",
      "content": "Breadcrumb Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f6f6f6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Advanced Settings"
    },
    {
      "type": "checkbox",
      "id": "hide_on_mobile",
      "label": "Hide on mobile devices",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_schema",
      "label": "Enable Schema Markup (SEO)",
      "default": true,
      "info": "Adds structured data for improved SEO"
    }
  ]
}
{% endschema %} 