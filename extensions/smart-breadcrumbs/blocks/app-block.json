{
  "name": "Smart Breadcrumbs",
  "type": "breadcrumb",
  "target": "section",
  "stylesheet": "breadcrumb-styles.css",
  "javascript": "",
  "settings": [
    {
      "type": "header",
      "content": "Breadcrumb Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#0066cc"
    },
    {
      "type": "select",
      "id": "separator_style",
      "label": "Separator Style",
      "options": [
        {
          "value": "slash",
          "label": "Forward Slash (/)"
        },
        {
          "value": "arrow",
          "label": "Arrow (→)"
        },
        {
          "value": "bullet",
          "label": "Bullet (•)"
        }
      ],
      "default": "slash"
    },
    {
      "type": "checkbox",
      "id": "show_on_mobile",
      "label": "Show on mobile devices",
      "default": true
    },
    {
      "type": "header",
      "content": "Advanced Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_schema_markup",
      "label": "Enable Schema Markup (SEO)",
      "default": true,
      "info": "Adds structured data for better SEO"
    }
  ],
  "presets": [
    {
      "name": "Smart Breadcrumbs",
      "category": "Navigation"
    }
  ]
} 