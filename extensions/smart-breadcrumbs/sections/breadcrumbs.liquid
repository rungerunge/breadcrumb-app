{%- comment -%}
  Smart Breadcrumbs Section v5.1
  A section for breadcrumb navigation that can be added to any template
{%- endcomment -%}

<div id="smart-breadcrumbs" class="smart-breadcrumbs-section" 
  style="margin-top: {{ section.settings.marginTop }}px; margin-bottom: {{ section.settings.marginBottom }}px;">
  {% render 'smart-breadcrumbs' %}
</div>

{% schema %}
{
  "name": "Smart Breadcrumbs",
  "settings": [
    {
      "type": "number",
      "id": "marginTop",
      "label": "Margin Top",
      "default": 20
    },
    {
      "type": "number",
      "id": "marginBottom",
      "label": "Margin Bottom",
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "enableDebugging",
      "label": "Enable Debugging",
      "default": true,
      "info": "Shows diagnostic information to help troubleshoot breadcrumb issues"
    }
  ],
  "presets": [
    {
      "name": "Smart Breadcrumbs",
      "category": "Navigation"
    }
  ]
}
{% endschema %} 